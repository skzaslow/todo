<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Date created</th>
	<th>Description</th>
    <th>Due date</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= task.item %></td>
	<td><%= task.description %></td>
    <td><%= task.created_at %></td>
	<td><%= task.due_date %></td>
    <td class="list_actions">
		<%= link_to 'Show', task %><br/>
		<%= link_to 'Edit', edit_task_path(task) %><br/>
		<%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
